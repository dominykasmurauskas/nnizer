{% extends 'base.html.twig' %}

{% block title %}{{ "log.in"|trans }}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {{ "logged.in.as"|trans({'%user%': app.user.username}, "messages") }}, <a href="{{ path('app_logout') }}">{{ "logout"|trans }}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{ "please.sign.in"|trans }}</h1>
    <label for="inputUsername" class="sr-only">{{ "username"|trans }}</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="{{ "username"|trans }}" required autofocus>
    <label for="inputPassword" class="sr-only">{{ "password"|trans }}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ "password"|trans }}" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        {{ "sign.in"|trans }}
    </button>
</form>
{% endblock %}
